/* pages/rent/rent.wxss */
/* 视图容器 */
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 0rpx 0rpx 0rpx 0rpx;
    margin-bottom: 120rpx;
    box-sizing: border-box;
    background-color: rgba(240, 240, 240, 0.5);
}

/* 简要卡片栏 */
.Shop_card_index {
    width: 90%;
    height: 250rpx;
    border-radius: 25rpx;
    background-color: rgba(255, 255, 255, 1);
    position: relative;
}

.shop_title {
    margin: 25rpx 0;
    padding: 0 20rpx;
    text-align: left;
    font-size: 30rpx;
}

.shop_id {
    padding: 0 20rpx;
    color: rgb(170, 170, 170);
    text-align: left;
    font-size: 20rpx;
    width: 30%;
}

.strong {
    font-weight: bold;
}

.shop_main_info {
    margin: 25rpx 0;
    padding: 0 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.shop_main_info_item {
    width: 30%;
    align-self: center;
    text-align: center;
}

.shop_main_info_item_info {
    color: rgb(255, 0, 0);
}

.shop_main_info_item_info>sup {
    font-size: 50%;
    vertical-align:text-top;
}

.shop_main_info_item_desc {
    color: rgb(170, 170, 170);
    font-size: 80%;
}

/* 基本卡片栏 */
.Shop_card_basic {
    width: 100%;
    margin-bottom: 50rpx;
    padding-left: 50rpx;
    text-align: left;
    background-color: white;
    box-shadow: 0rpx 0rpx 50rpx rgb(226, 216, 216);
}

.basic_item {
    display: flex;
}

.basic_item_two {
    display: flex;
}

.basic_item>view {
    margin: 25rpx 0;
    font-size: 28rpx;
}

.basic_item_title {
    order: 0;
    width: 120rpx;
}

.basic_item_info {
    order: 1;
    width: 200rpx;
    padding-left: 30rpx;
    color: rgb(170, 170, 170);
}

.basic_item_info_two {
    order: 1;
    width: 555rpx;
    padding-left: 30rpx;
    color: rgb(170, 170, 170);
}

.basic_item2 {
    margin: 20rpx 0;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.basic_info2 {
    font-size: 28rpx;
    color: rgb(170, 170, 170);
}

.basic_foot2 {
    margin: 20rpx 0;
    color: rgb(170, 170, 170);
    font-size: 25rpx;
}

.foot_btn {
    display: flex;
    flex-direction: row;
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 120rpx;
    justify-content: space-around;
    align-content: center;
    align-items: center;
    background-color:rgb(20,150,220);
    font-size: 30rpx;
    color: rgba(255, 255, 255, 0.856);
}