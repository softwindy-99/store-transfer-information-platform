/* pages/shop_upload/shop_upload.wxss */


.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    /*align-items: center;*/
    justify-content: space-between;
    padding: 0rpx 0rpx 180rpx 0rpx;
    margin-bottom: 120rpx;
    box-sizing: border-box;
    background-color: rgba(240, 240, 240, 0.5);
}

.form-item-title {
    width: auto;
    height: 50rpx;
    margin: 10rpx 0rpx 10rpx 0rpx;
    font-size: 36rpx;
    color: rgba(20,150,220,1);
    padding-left: 20rpx;
}
.form-input {
    width: 718rpx;
    height: 80rpx;
    padding-left: 10rpx;
    margin: 10rpx 10rpx 10rpx 10rpx;
    border-radius: 10rpx;
    border: 1px solid rgba(240,240,240,1);
    background-color: white;
}
.form-textarea {
    width: 718rpx;
    height: 210rpx;
    padding-left: 10rpx;
    margin: 10rpx 10rpx 10rpx 10rpx;
    border-radius: 10rpx;
    border: 1px solid rgba(240,240,240,1);
    background-color: white;
}
.picker {
    width: 718rpx;
    height: 60rpx;
    padding-left: 10rpx;
    margin: 10rpx 10rpx 10rpx 10rpx;
    border-radius: 10rpx;
    border: 1px solid rgba(240,240,240,1);
    background-color: white;
}
.arrow {
    width: 10px;
    height: 10px;
    border-top: 1px solid #999;
    border-right: 1px solid #999;
    transform: rotate(135deg);
    position: relative;
    top: -5rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
}
.image_div {
    width: 200rpx;
    height: 200rpx;
    margin: 20rpx 10rpx 20rpx 10rpx;
    float: left;
    background-position: center;
    background-size:100% 100%;
}
.list {
    padding: 30rpx;
    overflow: hidden;
}

.list .li {
    float: left;
    padding: 10rpx 15rpx;
    border: 1px solid #f0f0f0;
    border-radius: 10rpx;
    font-size: 26rpx;
    color: #808080;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
}

.list .li.cur {
    color: #55beb7;
    border-color: #55beb7;
}

.btn {
    display: flex;
    flex-direction: row;
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 120rpx;
    justify-content: space-around;
    align-content: center;
    align-items: center;
    background-color: rgb(20, 150, 220);
    font-size: 30rpx;
    color: rgba(255, 255, 255, 0.856);
    z-index: 99;
}